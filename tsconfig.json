{
  "compilerOptions": {
    /* 基本配置 */
    // 编译目标ES版本，推荐现代JS特性,
    "target": "ES2022",
    // 模块系统，推荐ES模块,
    "module": "ESNext",
    // 模块解析策略,
    "moduleResolution": "NodeNext",

    /* 类型检查配置 */
    // 启用所有严格类型检查选项,
    "strict": true,
    // 禁止隐式any类型（强制类型声明）,
    "noImplicitAny": true,
    // 严格的null/undefined检查,
    "strictNullChecks": true,
    // 函数参数双向协变检查,
    "strictFunctionTypes": true,
    // 严格bind/call/apply检查,
    "strictBindCallApply": true,
    // 类属性初始化检查,
    "strictPropertyInitialization": true,

    "include": [
      "src/**/*.ts"
    ]
  }
}